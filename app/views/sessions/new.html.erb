<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h3 class="text-center login-text">ログイン</h3>

        <%= form_with scope: :session, url: login_path do |f| %>

        <div class="form-group">
          <%= f.text_field :email, class: "form-control", autofocus: true, placeholder: 'メールアドレス' %>
          <p class="comment2">※ ログイン用アドレス：sonaare_urenashi@yahoo.co.jp</p>
        </div>

        <div class="form-group">
          <%= f.password_field :password, class: "form-control", placeholder: 'パスワード' %>
          <p class="comment2">※ ログイン用パスワード：0000000p</p>
        </div>

        <%= f.submit "ログイン", class: "btn-block btn-bule" %>
        <% end %>
      </div>
    </div>
  </div>
</div>