<div class="users-new-wrapper">
  <div class="container">
   <div class="row">
    <div class="col-md-offset-4 col-md-4 users-new-container">
      <h3 class="text-center login-text">ログイン</h3>
      <%= form_with scope: :session, url: login_path do |f| %>
        <div class="form-group">
          <%= f.label :メールアドレス, class: "login-text" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :パスワード, class: "login-text" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <%= f.submit "ログイン", class: "btn-block btn-white" %>
      <% end %>
   </div>
  </div>
 </div>
</div>
