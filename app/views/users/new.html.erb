<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h3 class="text-center login-text">新規登録</h3>
        <%= form_with model: @user, local: true do |f| %>

          <div class="form-group">
            <%= f.text_field :name, class: 'form-control', autofocus: true, placeholder: 'お名前' %>
          </div>
          <div class="form-group">
            <%= f.text_field :email, class: 'form-control', placeholder: 'メールアドレス'%>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード（確認）' %>
            <!-- password_confirmation = bcryptが暗号化、「password_digest」カラムに暗号化したデータを入れる -->
          </div>

            <%= f.submit "登 録", class: 'btn-block btn-bule' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
