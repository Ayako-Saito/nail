<!-- 投稿一覧ページ -->
<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">

            <%= link_to topic_path(topic.id) do %>
              <%= image_tag topic.image.url %>
            <% end %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
