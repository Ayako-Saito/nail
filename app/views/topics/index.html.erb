<!-- 投稿一覧ページ -->
<div class="topic-index-wrapper">
  <div class="container-fluid">
    <% @topics.each_with_index do |topic, i| %>
        <% if i % 4 == 0 then %>
          <div class="row">
        <% end %>
        <div class="col-md-3">
          <div class="topic-index-single">

            <%= link_to topic_path(topic.id) do %>
              <%= image_tag topic.image.url %>
            <% end %>

          </div>
        </div>
        <% if i % 4 == 3 %>
          </div>
        <% end %>
    <% end %>
  </div>
</div>
