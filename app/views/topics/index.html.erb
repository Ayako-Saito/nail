<!-- 投稿一覧ページ -->
<div class="topic-index-wrapper">
  <div class="container-fluid">
    <% @topics.each_with_index do |topic, i| %> <!-- 同時に取り出した順序の番号を取り出せる -->
    <% if i % 4 == 0 %> <!-- iを4で割った余りが0と等しい -->
    <div class="row">
      <% end %>
      <div class="col-md-3">
        <div class="topic-index-single">

        <% if logged_in? %>
          <%= link_to topic_path(topic.id) do %>
            <%= image_tag topic.image.url %>
          <% end %>
        <% else %>
          <%= link_to login_path do %>
            <%= image_tag topic.image.url %>
          <% end %>
        <% end %>

        </div>
      </div>
      <% if i % 4 == 3 %> <!-- iを4で割った余りが3と等しい -->
    </div>
    <% end %>
    <% end %>
  </div>
</div>