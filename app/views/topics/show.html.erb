<!-- 投稿詳細ページ -->
<div class="topic-show-wrapper">
  <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-show-single">

            <%= image_tag @topic.image.url %>

            <p class="show-name"> お名前：
              <%= @topic.user.name %>
            </p>

            <p class="show-box"> 色：
              <% @colorbox.each do |color| %>
              <%= color %>
              <% end %>
            </p>

            <p class="show-money"> 金額：
              <%= @money_text %>
            </p>

            <p class="show-contents"> コメント：
            <%= @topic.contents %>
            </p>

          <% if topic.user_id == current_user.id %>
            <%= link_to topics_path(topic_id: @topic.id), method: :delete, data: {confirm: "本当に削除しますか？"} do %>
            <p class="show-delete"> 削除 </p>
            <% end %>
          <% end %>

          </div>
        </div>
      </div>
  </div>
</div>
