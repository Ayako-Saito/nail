<!-- 投稿ページ -->
<div class="topics-new-wrapper">
  <div class="container">
   <div class="row">
    <div class="col-md-offset-4 col-md-4 users-new-container">
      <h3 class="text-center title">Your Nail</h3>
      <%= form_with model: @topic, local: true do |f| %>

        <div class="form-group-2">
          <%= f.label :image, "画像を選ぶ ＊",class: 'image-choice' %>
          <%= f.file_field :image, class: 'image-choice' %>
        </div>

        <%= f.label "色を選択（複数可）＊",class: 'image-choice' %><br />
          <% %w(赤 ピンク 黄 オレンジ 青 紫 緑 白 黒 グレー シルバー ゴールド).each.with_index do |box,i| %>
          <label class="image-choice">
            <%= check_box_tag 'topic[box][]', box,false,id:"topic_box_#{i}"%>
            <%= box %>
          </label>
          <% end %><br />


        <!-- < %= f.label "色を選択（複数可）＊",class: 'image-choice' %>
        <div class="image-choice-2">
        <input type="checkbox" name="color" value="1"> 赤
        <input type="checkbox" name="color" value="2"> ピンク
        <input type="checkbox" name="color" value="3"> 黄
        </div> -->

        <%= f.label "金額 ＊",class: 'image-choice-money' %>
        <div class="form-group-2">
          <select id="colors">
            <option value="" selected="selected">選択してください</option>
            <option value="1">5,000円以下</option>
            <option value="2">5,000円~10,000円</option>
            <option value="3">10,000円~15,000円</option>
          </select>

        </div>

        <!-- <script>
        $(':checkbox:checked').each(function() {
          //値を取得
